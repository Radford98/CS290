<!--Page to receive get and post requests and display the data sent.-->
<h1>{{type}} Request Received</h1>

<ul>
    {{#each dataList}}
    <li>{{this.name}}: {{this.value}}</li>
    {{/each}}
</ul>

<!--Form for testing out the above section.-->
<form id="myForm" method="get" onsubmit="getOrPost();">
    <fieldset>
        <legend>Submit Stuff</legend>
        <label for="fname">First Name:</label>
        <input type="text" name="fname" id="fname" />

        <br />
        <label for="lname">Last Name:</label>
        <input type="text" name="lname" id="lname" />

        <br />
        <label for="thingy">Select a thingy:</label>
        <select name="thingy" id="thingy">
            <option value="this">This</option>
            <option value="that">That</option>
            <option value="other">Other</option>
        </select>

        <br />
        <input type="radio" name="radio" value="get" checked />GET
        <input type="radio" name="radio" value="post" id="post" />POST

        <br />
        <input type="submit" value="submit" id="submit" />
    </fieldset>
</form>

<script>
    document.addEventListener("DOMContentLoaded", function (event) {
        console.log("DOM loaded");
    })

    // Function to change submission type to post
    function getOrPost() {
        console.log("form submitted");
        if (document.getElementById("post").checked == true) {
            console.log("post");
            document.getElementById("myForm").method = "post";
        }
    }
</script>